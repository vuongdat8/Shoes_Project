<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.OtpRegisterActivity">

    <!-- translucent overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_primary"
        android:alpha="0.7" />

    <!-- Logo & app name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/card_view"
        android:padding="28dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes Store"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- CardView with OTP form -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification"
                android:textColor="@color/my_primary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Enter the 6‑digit code sent to your email/phone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="24dp" />

            <!-- 6‑digit OTP row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!-- Each EditText has a bold black digit & thick primary border (bg_otp_box) -->

                <EditText
                    android:id="@+id/et_otp_1"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_otp_2"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_otp_3"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_otp_4"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_otp_5"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_otp_6"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_otp_box_selector"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="24dp" />

            <!-- Verify button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Verify"
                app:cornerRadius="32dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="12dp" />

            <!-- Resend & Back to login -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend code"
                    android:textColor="@color/my_primary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "
                    android:textColor="@color/my_primary" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back to Login"
                    android:textColor="@color/my_primary"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>